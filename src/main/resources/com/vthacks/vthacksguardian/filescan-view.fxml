<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="540" prefWidth="620.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vthacks.vthacksguardian.HelloController">
   <children>
      <ImageView fx:id="dragDropImage" fitHeight="540.0" fitWidth="620.0" onMouseClicked="#onFileDragged" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/dragFileHere.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="afterDragged" fitHeight="540.0" fitWidth="620.0" opacity="0.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/VirusScreen.png" />
         </image></ImageView>
      <Button fx:id="dragFileHereButton" mnemonicParsing="false" onMouseClicked="#onFileDragged" opacity="0.0" prefHeight="540.0" prefWidth="620.0" text="Button" />
   </children>
</AnchorPane>
